<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_no_record"
            android:text="No Record"
            android:visibility="gone"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:background="@color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">

                <ImageView
                    android:id="@+id/img_member_profile"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/profileimage"
                    android:elevation="1dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="85dp"
                        app:contentPaddingTop="15dp"
                        app:contentPaddingBottom="15dp"
                        app:contentPaddingLeft="15dp"
                        app:contentPaddingRight="15dp"
                        app:cardCornerRadius="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="60dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/tv_profile_teacher_name_title"
                                android:text="Member Name"
                                android:textSize="14dp"
                                android:textColor="@color/purple_700"
                                android:textStyle="bold"
                                android:layout_marginTop="20dp"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/tv_profile_teacher_name"
                                android:textSize="14dp"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:drawableLeft="@drawable/person_icon"/>


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Member Id"
                                android:textSize="14dp"
                                android:textColor="@color/purple_700"
                                android:textStyle="bold"
                                android:layout_marginTop="20dp"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/tv_member_id"
                                android:textSize="14dp"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:drawableLeft="@drawable/member_id_icon"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Member Package Type"
                                android:textSize="14dp"
                                android:textColor="@color/purple_700"
                                android:textStyle="bold"
                                android:layout_marginTop="20dp"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/tv_member_package_type"
                                android:textSize="14dp"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:drawableLeft="@drawable/icon_money"/>


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Member Mobile Number"
                                android:textSize="14dp"
                                android:textColor="@color/purple_700"
                                android:textStyle="bold"
                                android:layout_marginTop="20dp"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/tv_member_mobile_number"
                                android:textSize="14dp"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:drawableLeft="@drawable/mobile_no_icon"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Member Email"
                                android:textSize="14dp"
                                android:textColor="@color/purple_700"
                                android:textStyle="bold"
                                android:layout_marginTop="20dp"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/tv_member_email"
                                android:textSize="14dp"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:drawableLeft="@drawable/email_icon"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Member Gender"
                                android:textSize="14dp"
                                android:textColor="@color/purple_700"
                                android:textStyle="bold"
                                android:layout_marginTop="20dp"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/tv_member_gender"
                                android:textSize="14dp"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:drawableLeft="@drawable/gender_icon"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Member DOB"
                                android:textSize="14dp"
                                android:textColor="@color/purple_700"
                                android:textStyle="bold"
                                android:layout_marginTop="20dp"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/tv_member_dob"
                                android:textSize="14dp"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:drawableLeft="@drawable/dob_icon"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Member Address"
                                android:textSize="14dp"
                                android:textColor="@color/purple_700"
                                android:textStyle="bold"
                                android:layout_marginTop="20dp"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/tv_member_address"
                                android:textSize="14dp"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:drawableLeft="@drawable/address_icon"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progress"
            android:layout_centerInParent="true"
            android:visibility="gone"
            />

    </RelativeLayout>

</ScrollView>