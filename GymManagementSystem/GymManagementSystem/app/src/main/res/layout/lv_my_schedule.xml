<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/cardview11"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="3dp">

        <LinearLayout
            android:id="@+id/l1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_my_schedule_day_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:text="Day"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/txt_my_schedule_day"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:text=""
                android:textSize="15dp" />

            <TextView
                android:id="@+id/txt_my_schedule_workout_title_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:text="Workout Title"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/txt_my_schedule_workout_title"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:text=""
                android:textSize="15dp" />

            <TextView
                android:id="@+id/txt_my_schedule_workout_description_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:text="Workout Description"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/txt_my_schedule_workout_description"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:text=""
                android:textSize="15dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
